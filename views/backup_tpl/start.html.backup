<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <title>Пінг статистика</title>
        <link rel="stylesheet" type="text/css" href="/static/main.css">
    </head>
    <body>
        <div class='container'>

            <div class='left-column'>
                <div class='label'>
                    <span><a href='/'><b>-= Home =-</b></a></span>
                </div>
                <p>
                    <ul>
                       % for ip in ip_list: 
                        <li><a href='/{{ip}}'>{{ip}}</a></li>
                       % end
                    </ul>
                </p>
            </div>

            <div class='content'>
                <span><b>Add IP</b></span>
                <form name='add_ip' method='post'>
                    <p>
                        <input name='ip' type='text' size='15'><b> IP</b><br>
                        <input name='comment' type='text' size='20'><b> Comment</b><br>
                        <input type='submit' value='Add'>
                    </p>
                </form>
                <span><b>Monitoring list</b></span><br>
                <span>Date: {{current_date}}</span>
                <br><br>
                <table>
                    <tr>
                        <th>ip</th>
                        <th>sent</th>
                        <th>received</th>
                        <th>loss %</th>
                    </tr>
                  % for row in day_statistic:
                    <tr>
                        <td><a href='/{{row[0]}}'>{{row[0]}}</a></td>
                        <td>{{row[1]}}</td>
                        <td>{{row[2]}}</td>
                        <td>{{row[3]}}%</td>
                    </tr>
                  % end
                </table>
            </div>
            
            <div class='clearer'>
            </div>

        </div>

<!--        <div class='footer'>
        <span>Footer :)</span>
        </div> -->
    </body>
</html>

